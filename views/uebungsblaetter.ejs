<main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">

    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h3">Übungsblätter</h1>
        <div>
            <button type="button" class="btn btn-secondary" onclick="location.href = '/vorlesungen/addVorlesung'">Add Vorlesung</button>
            <button type="button" class="btn btn-secondary" onclick="location.href = '/uebungsblaetter/addUebungsblatt'">Add Übungsblatt</button>
        </div>
    </div>

    <div class="container pb-1 pt-1">
        <form class="reloadForm" action="/uebungsblaetter" method="POST">
            <div class="form-row justify-content-end">
                <div class="form-group col-md-2">
                    <select id="name" name="name" class="form-control" required>
                    <option selected disabled>Choose Vorlesung</option>
                    <% lectures.forEach(test=> { %>
                        <option ><%= test.lecture %></option>
                        <% }) %>
                </select>
                </div>


                <div class="form-group col-md-2">
                    <select id="semester" name="semester" class="form-control" required>
                        <option selected disabled>Choose Semester</option>
                        <% semester.forEach(test=> { %>
                            <option ><%= test.semester %></option>
                            <% }) %>
                    </select>
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-success btn-block">start</button>
                </div>
            </div>
    </div>
    <hr>

    </form>
    <% include ./partials/tableUebungsblaetter %>
        </div>


</main>