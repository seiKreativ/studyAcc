<main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2">Edit Exam</h1>



    </div>

    <div class="table-wrapper-scroll-y my-custom-scrollbar">

        <% if (exam) { %>

            <form class="addExamForm" action="/exams/editExam/<%= exam.semester %>/<%= exam.name %>" method="POST">
                <div class="form-row">
                    <div class="form-group col-md-4">
                        <label for="semester">Semester</label>
                        <select id="semester" name="semester" class="form-control" required>
                        <option selected> <%= exam.semester %></option>
                    </select>
                    </div>
                    <div class="form-group col-md-4">
                        <label for="name">Name der Veranstaltung: </label>
                        <input type="text" class="form-control" name="name" id="name" placeholder="Name der Veranstaltung" value="<%= exam.name %>" readonly>
                    </div>

                    <div class="form-group col-md-4">
                        <label for="note">Note</label>
                        <select id="note" name="note" class="form-control" required>
                            <option selected><%= exam.note %></option>
                            <option>1.0</option>
                            <option>1.3</option>
                            <option>1.7</option>
                            <option>2.0</option>
                            <option>2.3</option>
                            <option>2.7</option>
                            <option>3.0</option>
                            <option>3.3</option>
                            <option>3.7</option>
                            <option>4.0</option>
                            <option>4.3</option>
                            <option>4.7</option>
                            <option>5.0</option>
                        </select>

                    </div>
                </div>
                <div class="form-row justify-content-center">
                    <div class="col align-self-center">
                        <button type="submit" class="btn btn-success btn-block">Edit Exam</button>
                    </div>
                </div>
    </div>

    </form>
    <% } else { %>
        <p class="text-center">Exam Not Found. Go <a href="/exams/addExam">here</a> to add exams.</p>
        <% } %>

</main>